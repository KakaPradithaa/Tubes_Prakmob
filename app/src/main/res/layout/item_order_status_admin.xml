<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_gradient_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/header_top_rounded_background">

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:text="PENDING"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/status_badge_background_default"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/tvBookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="12 Des 2024, 10:00"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/indigoblue_banner"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bordered_section_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PELANGGAN"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Nama Pelanggan"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO.HANDPHONE"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#6B7280"
                            android:letterSpacing="0.1"
                            android:gravity="end" />

                        <TextView
                            android:id="@+id/tvCustomerPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="08123456789"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_bordered_section_background"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KENDARAAN"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvVehicleInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Toyota Avanza"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvLicensePlate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="B 1234 ABC"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_bordered_section_background"
                    android:padding="16dp"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAYANAN"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#6B7280"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvServiceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Service Rutin"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutComplaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/complaint_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš  KELUHAN"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#DC2626"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvComplaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Keluhan pelanggan..."
                    android:textSize="14sp"
                    android:textColor="#DC2626"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnUpdateStatus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="UPDATE STATUS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/indigoblue"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>